<Window x:Class="TextBoxSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBoxSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="80" Width="250">
    <StackPanel>
        <!-- AcceptsReturn = Enter/Return 키를 사용하여 다음 줄로 이동할 수 있도록 하여 여러줄을 쓸 수 있다.-->
        <!-- TextWrapping은 자동 줄바꿈 -->
        <!-- SpellCheck.IsEnabled="True" Language="en-US" 맞춤법 체크-->
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="en-US"/>
    </StackPanel>
</Window>
